{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist/module",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
