{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2023", "dom"],
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "dist/module",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
